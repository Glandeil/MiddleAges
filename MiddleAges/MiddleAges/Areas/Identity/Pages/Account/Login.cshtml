@page
@model LoginModel

@{
    ViewData["Title"] = "MIDDLE AGES";
}

<body class="auth_background">
    <div class="auth_text_color text-center">
        <div class="d-inline-block auth_width text-center mt-5">
            <p class="auth_text_font ml-3">@ViewData["Title"]</p>
            <form id="account" method="post" class="text-center">
                <h4 class="auth_text_font_login text-center">LOGIN</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger "></div>
                <div class="form-group w-50 text-center d-inline-flex">
                    <input asp-for="Input.Email" class="auth_form-control " placeholder="EMAIL" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group w-50 text-center d-inline-flex">
                    <input asp-for="Input.Password" class="auth_form-control " placeholder="PASSWORD" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group w-50 text-center d-inline-flex">
                    <button type="submit" class="btn auth_btn auth_text_font_but ">SIGN IN</button>
                </div>
                @* <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
