                        </label>
                    </div>
                </div> *@
                <hr />
                <div class="form-group d-inline-flex auth_div_width">
                    <p class="auth_text_font_text w-100">Don't have an account?</p>
                    <p class="w-100 ">
                        <a asp-page="./Register" class="auth_text_font_a " asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a>
                    </p>
                </div>
                <br />
                <div class="form-group d-inline-flex auth_div_width">
                    <p class="w-50">
                        <a id="forgot-password" class="auth_text_font_a " asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    @* <p class="w-50">
                        <a id="resend-confirmation" class="auth_text_font_a" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p> *@
                </div>
            </form>
        </div>
        <div class="lhst_vertical-alignment-top float-right text-right">
            <img class="float-right text-right auth_height" src="~/img/interface-icons/register.jpg" alt="" loading="lazy"/>
        </div>
