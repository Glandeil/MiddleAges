@page
@model RegisterModel
@{
    ViewData["Title"] = "MIDDLE AGES";
}

<body class="auth_background">

    <div class="auth_text_color text-center ">
       
        <div class="d-inline-block text-center mt-5">
            <div>
                <p class="auth_text_font ml-3 mt-5">@ViewData["Title"]</p>
                <div class="mb-5">
                    <img class="auth_width_img auth_height" src="~/img/interface-icons/gerb.png" alt="" />
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-sm-12 col-md-4">
                            <p>
                                Middle Ages - первый проект, разработанный компанией lhstcorp. Это средневековая игра в жанре стратегии, которая позволит попасть в Беларусь тех времен. Сражения за земли с другими игроками, организация восстаний, правление собственным государством - всё это вы сможете опробовать в данной игре. MIDDLE AGES - стань легендой средневековья!
                            </p>
                        </div>
                        <div class="col-sm-12 col-md-4">
                    
                            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                                <h4 class="auth_text_font_login text-center">Create a new account</h4>
                                <hr />
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group  text-center ">
                                    <input asp-for="Input.Email" class="auth_form-control " placeholder="EMAIL" type="email"/>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group  text-center ">
                                    <input asp-for="Input.UserName" class="auth_form-control " placeholder="USERNAME" maxlength="10"/>
                                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group  text-center ">
                                    <input asp-for="Input.Password" class="auth_form-control " placeholder="PASSWORD" type="password"/>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group  text-center ">
                                    <input asp-for="Input.ConfirmPassword" class="auth_form-control " placeholder="CONFIRM PASSWORD" type="password" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group  text-center ">
                                    <button type="submit" class="btn auth_btn auth_text_font_but ">SIGN UP</button>
                                </div>
                                <hr />
                                <div class="form-group d-inline-flex auth_div_width">
                                    <p class="w-50 ">
                                        <a asp-page="./Login" class="auth_text_font_a " asp-route-returnUrl="@Model.ReturnUrl">Sign In</a>
                                    </p>
                                    <p class="w-50 ">
                                        <a id="forgot-password" class="auth_text_font_a " asp-page="./ForgotPassword">Forgot your password?</a>
                                    </p>
                                </div>
                            </form>
                        </div>
                        <div class="col-sm-12 col-md-4">
                            <div class="row d-inline-flex">
                                <div class="col-6 lhst_scale">
                                    <img class="auth_height" src="~/img/map-regions-icons-middle-ages/Alytus.png" alt="" loading="lazy" />
                                    <img class="auth_height" src="~/img/map-regions-icons-middle-ages/Kaunas.png" alt="" loading="lazy" />
                                </div>
                                <div class="col-6 lhst_scale">
                                    <img class="auth_height" src="~/img/map-regions-icons-middle-ages/Monki.png" alt="" loading="lazy" />
                                    <img class="auth_height" src="~/img/map-regions-icons-middle-ages/Pruzhany.png" alt="" loading="lazy" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
