@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@using MiddleAges.ViewComponents

@inject IAuthorizationService AuthorizationService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiddleAges</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/middle-ages-style.css" />
</head>
<body>
    <div>
        <div class="">
            @* class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" *@
            <div class="">

                <div class="row">
                    @* navbar-collapse collapse *@

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="col-md-4">
                            @await Component.InvokeAsync(typeof(PlayerOverviewNavViewComponent))
                        </div>

                        <div class="col-md-4">
                            <ul class="">
                                <li class="nav-item lhst_nav-ul-li">
                                    <a class="nav-link text-dark header-menu" asp-area="" asp-controller="Main" asp-action="Index">Main</a>
                                </li>
                                <li class="nav-item lhst_nav-ul-li">
                                    <a class="nav-link text-dark header-menu" asp-area="" asp-controller="Map" asp-action="Index">Map</a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="flex-grow-1"></div>
                    }
                <div class="col-md-4">
                    <partial name="_LoginPartial" />
                </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MiddleAges - <a asp-area="" asp-controller="Main" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
